<%= simple_form_for(@selection) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-3">Topluluk Seçiniz</label>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.input :club_id, collection: Club.all.flat_map { |club| [[club.name, club.id]] }, label: false, prompt: 'Topluluk Seçiniz', :input_html => { :id => "clubs_for_director" } %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 ">

      </div>
    </div>
    <div class="row form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-3">Seçim listesi oluşturma başlangıç tarihi</label>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.input :start_list_creation_date, label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 ">

      </div>
    </div>
    <div class="row form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-3">Seçim listesi oluşturma bitiş tarihi</label>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.input :end_list_creation_date, label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 ">

      </div>
    </div>
    <div class="row form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-3"></label>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.input :allow_list_creation, label: "Liste oluşturulmasına izin ver" %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 ">

      </div>
    </div>
    <div class="row form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-3">Seçim başlangıç tarihi</label>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.input :start_selection_date, label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 ">

      </div>
    </div>
    <div class="row form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-3">Seçim bitiş tarihi</label>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.input :end_selection_date, label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 ">

      </div>
    </div>
    <div class="row form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-3"></label>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.input :allow_selection, label: "Seçim yapılmasına izin ver" %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 ">

      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Kaydet', class: "btn btn-success" %>
  </div>
<% end %>
