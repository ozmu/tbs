<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li><%= link_to 'Seçimler', selections_path %></li>
      <li class="active">Seçim Detayı</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Seçim Detayı</h3>
      </div>
      <div class="panel-body">
        <p>
          <strong>Start list creation date:</strong>
          <%= @selection.start_list_creation_date %>
        </p>

        <p>
          <strong>End list creation date:</strong>
          <%= @selection.end_list_creation_date %>
        </p>

        <p>
          <strong>Allow list creation:</strong>
          <%= @selection.allow_list_creation %>
        </p>

        <p>
          <strong>Start selection date:</strong>
          <%= @selection.start_selection_date %>
        </p>

        <p>
          <strong>End selection date:</strong>
          <%= @selection.end_selection_date %>
        </p>

        <p>
          <strong>Allow selection:</strong>
          <%= @selection.allow_selection %>
        </p>
        <br />
        <%= link_to 'Düzenle', edit_selection_path(@selection), class: "btn btn-success" %> |
        <%= link_to 'Geri', selections_path, class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
