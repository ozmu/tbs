
<div class="row">
  <%= render 'home/navbarDefault' %></div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Anasayfa', root_path %></li>
      <li class="active">Kararlar</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <h4 class="panel-title pull-left" style="padding-top: 7.5px;">Karar</h4>
      </div>
      <div class="panel-body">
        <p align="right">
        </p>

        <h3>Karar Adı: <%= @decision.name %></h3>
        <%= link_to 'Geri', decisions_path, class: "btn btn-info" %>
        <% if  current_user.present? && current_user.admin? %>
            <%= link_to 'Düzenle', edit_decision_path(@decision), class: 'btn btn-success' %>
            <%= link_to "Sil",decision_path(@decision),class:"btn btn-danger", method: :delete, data:{confirm: "Emin misiniz?"}%>
        <% end %>