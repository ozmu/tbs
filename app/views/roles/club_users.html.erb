<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li class="active">Üyeler</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Üyeler</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover" id="club_users_index">
          <thead>
            <tr>
              <th></th>
              <th>Kullanıcı Adı</th>
              <th>Durum</th>
              <th>Açıklama</th>
              <th>Email</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @roles.each do |role| %>
            <tr>
              <td></td>
              <td><%= link_to role.user.name_surname, role.user.profile %></td>
              <% member_block_request = role.user.member_block_request(role.club_period.club)  %>
              <% if member_block_request %>
                <td>Engelleme için onay bekleniyor</td>
                <td><%= member_block_request.explanation %></td>
              <% else %>
                <td>--</td>
                <td>--</td>
              <% end %>
              <td><%= role.user.email %></td>
              <td>
                <% if current_user.president? && !member_block_request %>
                <%= link_to '<i class="fa fa-pencil" title="Düzenle"></i>'.html_safe, new_black_list_path(user_id: role.user.id) %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br />
      </div>
    </div>
  </div>
</div>
